<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
	android:animateLayoutChanges="true"
android:scrollbars="vertical">
	<LinearLayout
		android:layout_width="match_parent"  
        android:layout_height="wrap_content"  
        android:orientation="vertical" 
		 android:paddingTop="10dp"
	 android:paddingLeft="10dp">

	<TextView
		android:layout_width="fill_parent"
		android:layout_height="fill_parent"
		android:textStyle="bold"
		android:textColor="#000000"
		android:gravity="center"
		android:textSize="40dp"
		android:id="@+id/NazwaRyby1" />
	
	<TextView
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:textStyle="bold"
		android:textColor="#000000"
            android:layout_below="@id/NazwaRyby1"
		android:id="@+id/Indeks1" />
         <Space
            android:layout_width="match_parent"
            android:layout_height="20dp"
        android:paddingTop="20dp"/>
	<ImageView
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
        android:paddingBottom="15dp"
       android:paddingTop="30dp"
        android:scaleX="5"
        android:layout_below="@id/Indeks1"
            android:scaleY="5"
		android:id="@+id/Obrazek" />
         <Space
            android:layout_width="match_parent"
            android:layout_height="100dp"/>
        <Button
		android:id="@+id/opisryby"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:text="OPIS RYBY" 
		android:textSize="30dp"
            android:layout_marginRight="10dp"
			android:textStyle="bold"
           android:layout_below="@id/Obrazek"
		android:textColor="#000000"/>
        <Space
            android:layout_width="match_parent"
            android:layout_height="20dp"/>
	<Button
		android:id="@+id/usun"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:text="UsuÅ„ z Ulubionych"
         android:textStyle="bold"
            android:layout_marginRight="10dp"
            android:textSize="25dp"/>

</LinearLayout>
	</ScrollView>
